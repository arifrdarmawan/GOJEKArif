<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/order"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@drawable/menu_gofood"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Order Food"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#03fc0f"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/order" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp">
    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Nama"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/edit_textdata1"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:hint="Isi Nama"
        android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:text="Alamat"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/edit_textdata2"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:hint="Isi Alamat"
        android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Pesan"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/edit_textdata3"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:hint="Isi Pesanan"
        android:textSize="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/submitorder"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:text="ORDER"
        android:layout_marginTop="15dp"
        android:background="#03fc0f"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"/>
</LinearLayout>